{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2018",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "types": [
      "vuetify",
      "vue-i18n",
      "vite/client",
      "unplugin-vue2-script-setup/types"
    ],
    "paths": {
      "@/*": [
        "app/src/*"
      ],
      "@rotki/common/*": [
        "common/src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "references": [
    {
      "path": "app"
    },
    {
      "path": "common"
    }
  ],
  "include": [
    ".eslintrc.js"
  ],
  "exclude": [
    "node_modules",
    "common/lib",
    "cypress"
  ]
}
